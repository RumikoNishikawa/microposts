<h1>Sign up</h1>

<div class = "row" >
  <diw class = "col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name class: 'form-control' %>
                
      <%= f.label :email %>
      <%= f.text_field :email 'form-control' %>
                
      <%= f.label :password %>
      <%= f.password_field :password 'form-control' %>
                
      <%= f.label :password_confirmation , "パスワード入力確認" %>
      <%= f.password_field :password_confirmation %>
                
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </diw>
</div>